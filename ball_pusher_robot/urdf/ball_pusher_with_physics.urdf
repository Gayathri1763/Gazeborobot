<?xml version="1.0"?>
<robot name="ball_pusher">

  <!-- MATERIALS -->
  <material name="grey">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <!-- BASE LINK (MAIN BODY) -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.6 0.4 0.2"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><box size="0.6 0.4 0.2"/></geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- GAZEBO PLUGIN -->
  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- FRONT LEFT WHEEL -->
  <link name="front_left_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <gazebo reference="front_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 0.22 -0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- FRONT RIGHT WHEEL (copy and change origin) -->
  <link name="front_right_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <gazebo reference="front_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.2 -0.22 -0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- REAR LEFT WHEEL -->
  <link name="rear_left_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <gazebo reference="rear_left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.2 0.22 -0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- REAR RIGHT WHEEL -->
  <link name="rear_right_wheel">
    <visual>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.08" length="0.04"/></geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <gazebo reference="rear_right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.2 -0.22 -0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- LEFT ARM -->
  <link name="left_arm">
    <visual>
      <geometry><box size="0.45 0.05 0.1"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><box size="0.45 0.05 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <gazebo reference="left_arm">
    <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="left_arm_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_arm"/>
    <origin xyz="0.35 0.20 0.0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="1" lower="-1.2" upper="0.3"/>
  </joint>

  <!-- LEFT GRIPPERS (add only ONE for now to test) -->
  <link name="left_gripper_1">
    <visual>
      <geometry><box size="0.02 0.23 0.1"/></geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.23 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <gazebo reference="left_gripper_1">
    <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="left_gripper_1_joint" type="prismatic">
    <parent link="left_arm"/>
    <child link="left_gripper_1"/>
    <origin xyz="0.20 0 0" rpy="0 0 0"/>
    <axis xyz="0 -1 0"/>
    <limit lower="0" upper="0.08" effort="5" velocity="0.1"/>
  </joint>

</robot>
