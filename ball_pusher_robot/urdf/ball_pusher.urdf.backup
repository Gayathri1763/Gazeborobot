<?xml version="1.0"?>
<robot name="ball_pusher">

  <!-- BASE LINK -->
  <link name="base_link">
    <visual><geometry><box size="0.6 0.4 0.2"/></geometry><material name="grey"/></visual>
    <collision><geometry><box size="0.6 0.4 0.2"/></geometry></collision>
    <inertial><mass value="5.0"/><inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/></inertial>
  </link>

  <gazebo reference="base_link"><material>Gazebo/Grey</material></gazebo>

  <!-- 4 WHEELS (your original positions) -->
  <link name="front_left_wheel">
    <visual><geometry><cylinder radius="0.08" length="0.04"/></geometry><origin xyz="0 0 0" rpy="1.5708 0 0"/><material name="black"/></visual>
    <collision><geometry><cylinder radius="0.08" length="0.04"/></geometry><origin xyz="0 0 0" rpy="1.5708 0 0"/></collision>
    <inertial><mass value="0.5"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/></inertial>
  </link>

  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.2 0.22 -0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <gazebo reference="front_left_wheel"><material>Gazebo/Black</material></gazebo>

  <!-- Add other 3 wheels similarly (front_right, rear_left, rear_right) -->

  <!-- LEFT ARM -->
  <link name="left_arm">
    <visual><geometry><box size="0.45 0.05 0.1"/></geometry><material name="grey"/></visual>
    <collision><geometry><box size="0.45 0.05 0.1"/></geometry></collision>
    <inertial><mass value="0.3"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>

  <joint name="left_arm_joint" type="fixed">
    <parent link="base_link"/>
    <child link="left_arm"/>
    <origin xyz="0.35 0.20 0.0" rpy="0 0 0"/>
  </joint>

  <gazebo reference="left_arm"><material>Gazebo/Grey</material></gazebo>

  <!-- RIGHT ARM -->
  <link name="right_arm">
    <visual><geometry><box size="0.45 0.05 0.1"/></geometry><material name="grey"/></visual>
    <collision><geometry><box size="0.45 0.05 0.1"/></geometry></collision>
    <inertial><mass value="0.3"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>

  <joint name="right_arm_joint" type="fixed">
    <parent link="base_link"/>
    <child link="right_arm"/>
    <origin xyz="0.35 -0.20 0.0" rpy="0 0 0"/>
  </joint>

  <gazebo reference="right_arm"><material>Gazebo/Grey</material></gazebo>

  <!-- GRIPPERS (FIXED for now) -->
  <link name="left_gripper_1">
    <visual><geometry><box size="0.02 0.23 0.1"/></geometry><material name="grey"/></visual>
    <collision><geometry><box size="0.02 0.23 0.1"/></geometry></collision>
    <inertial><mass value="0.05"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
  </link>

  <joint name="left_gripper_1_joint" type="fixed">
    <parent link="left_arm"/>
    <child link="left_gripper_1"/>
    <origin xyz="0.20 0 0" rpy="0 0 0"/>
  </joint>

  <gazebo reference="left_gripper_1"><material>Gazebo/Grey</material></gazebo>

</robot>
